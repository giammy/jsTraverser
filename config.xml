<?xml version='1.0' encoding='utf-8'?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<!-- https://github.com/phonegap/phonegap-start/blob/master/www/config.xml -->

<widget id="com.giammy.jsTraverser" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="https://phonegap.com/ns/1.0">
  <name>jsTraverser</name>
  <description>Viewer for MDSplus archive</description>
  <author email="gianluca.moro@unipd.it" href="http://giammy.com">Gianluca Moro</author>

  <!-- https://pixabay.com/ -->
  <icon src="img/icon.png" />

  <!-- <preference name="phonegap-version" value="cli-6.5.0" />  now cli-8.0.0 -->

  <access origin="*" /> - a wildcard access tag allows access to all external resource.
  <plugin name="cordova-plugin-whitelist" version="1" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

</widget>
